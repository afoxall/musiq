<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_live_session"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.choosemuse.example.libmuse.LiveSessionActivity"

    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="67dp">

        <TextView
            android:text="Working (active) time:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:id="@+id/WorktimeLabel" />

        <TextView
            android:text="0 mins"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:id="@+id/worktimeamount"
            android:layout_weight="0.05"
            android:textAlignment="textEnd"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="82dp">

        <TextView
            android:text="Break (rest) time:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/breaktimelabel"
            android:layout_weight="0.06"
            android:textSize="18sp" />

        <TextView
            android:text="0 mins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resttimeamount"
            android:layout_weight="0.18"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:layout_weight="0.91">

        <TextView
            android:text="Intervals:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/intervalLabel"
            android:layout_weight="1"
            android:textSize="18sp" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/intervalamount"
            android:layout_weight="1.54"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:text="START"
        android:layout_width="349dp"
        android:layout_height="81dp"
        android:id="@+id/startButton"
        android:layout_weight="0.08"
        style="@android:style/Widget.DeviceDefault.Button"
        android:background="@android:color/holo_green_dark"
        android:textSize="24sp"
        android:textColor="@android:color/background_light" />

</LinearLayout>


