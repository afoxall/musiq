<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#437983">

    <TextView
        android:text="\nsessions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textColor="#012C34"
        android:textStyle="normal|bold"
        android:layout_weight="0.22" />

    <Button
        android:text="high intensity"
        android:layout_height="wrap_content"
        android:id="@+id/firstsessionbtn"
        android:layout_width="350dp"
        style="@style/AppBaseTheme"
        android:background="@drawable/roundbutton"
        android:textColor="#6A959D"
        tools:textStyle="bold"
        android:textSize="28sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_weight="0.00"
        android:layout_height="20dp" />

    <Button
        android:text="medium intensity"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/secondsessionbtn"
        android:background="@drawable/roundbutton"
        android:textStyle="normal|bold"
        android:textSize="28sp"
        android:textColor="#6A959D" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:text="not due for a week"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/thirdsessionbtn"
        android:background="@drawable/roundbutton"
        android:textColor="#6A959D"
        android:textSize="28sp"
        android:textStyle="normal|bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:text="not due for a week"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/fourthsessionbtn"
        android:background="@drawable/roundbutton"
        android:textColor="#6A959D"
        android:textSize="28sp"
        android:textStyle="normal|bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:text="not due for a week"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/fifthsessionbtn"
        android:background="@drawable/roundbutton"
        android:textColor="#6A959D"
        android:textSize="28sp"
        android:textStyle="normal|bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:text="+"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/addsessionbtn"
        android:background="@drawable/roundbutton"
        android:textColor="#6A959D"
        android:textSize="28sp"
        android:textStyle="normal|bold" />

</LinearLayout>
